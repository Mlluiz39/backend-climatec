# Backend Configuration
PORT=3000
NODE_ENV=development
MONGO_URI=mongodb://mongo:27017/climate-sync
JWT_SECRET=generate_with_openssl_rand_hex_64_or_node_crypto
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=change_this_secure_password

# MongoDB Configuration
MONGO_INITDB_DATABASE=climate-sync

# RabbitMQ Configuration
RABBITMQ_USER=admin
RABBITMQ_PASS=change_this_password
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_QUEUE=weather.data
RABBITMQ_VHOST=/
# AMQP URL constructed from above parts for services that need full URL
RABBITMQ_URL=amqp://admin:change_this_password@rabbitmq:5672/

# Worker/Producer Configuration
# Get coordinates from: https://www.latlong.net/
LATITUDE=-23.64683
LONGITUDE=-46.45510
COLLECTION_INTERVAL_MINUTES=60

# API Integrations
PYTHON_API_URL=http://python-producer:5000/weather
NEST_API_URL=http://nestjs-api:3000/api/weather/logs

# AI Configuration
# Choose one: gemini, claude, or openai
AI_PROVIDER=gemini

# Get your API keys:
# Gemini: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Claude: https://console.anthropic.com/
CLAUDE_API_KEY=your_claude_api_key_here

# OpenAI: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here